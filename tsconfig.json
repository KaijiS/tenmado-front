{
    "compilerOptions": {
        "target": "es2018",
        "module": "esnext",
        "moduleResolution": "node",
        "lib": [
            "esnext",
            "esnext.asynciterable",
            "dom"
        ],
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "allowJs": true,
        "sourceMap": true,
        "strict": true,
        "noEmit": true,
        // Typescriptに対応したら外す
        "noImplicitAny": false,
        "baseUrl": ".",
        "paths": {
            "~/*": [
                "./app/*"
            ],
            "@/*": [
                "./app/*"
            ]
        },
        "types": [
            "@types/node",
            "@nuxt/types",
            "@nuxtjs/axios",
            "vuetify"
        ]
    },
    "exclude": [
        "node_modules",
    ]
}